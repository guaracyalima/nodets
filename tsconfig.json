{
    "compilerOptions":{
       "module":"commonjs",
       "noImplicitAny":true,
       "removeComments":true,
       "preserveConstEnums":true,
       "sourceMap":true,
       "target":"es5",
        "strictPropertyInitialization":false,
        "baseUrl":"./src",
        "paths":{
            "@modules/*":["modules/*"],
            "@config/*":["config/*"],
            "@shared/*":["shared/*"]
        },
        "esModuleInterop":true,
        "experimentalDecorators":true,
        "forceConsistentCasingInFileNames":true,
        "resolveJsonModule": true
    }
 }